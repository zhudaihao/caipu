<resources>
    <!-- Base application theme. -->
    //NoActionBar页面不要title

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>//设置最顶栏背景颜色
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    //tabLayout

    <style name="radioStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/px20</item>
        <item name="android:textColor">@color/selector_tab_color</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>


    <style name="home_title">
        <item name="android:layout_marginRight">21dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>


    <style name="home_text_r">
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/color_94</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="home_hot_image">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="home_capacity_image">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">11dp</item>
    </style>

    <style name="me_text">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="edit_text">
        <item name="android:textColorHint">#E0E0E0</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/color_3</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>
</resources>
