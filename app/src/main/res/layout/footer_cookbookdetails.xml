<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_production_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp14"
            android:text="大家做的这道菜"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp16" />


        <TextView
            android:id="@+id/tv_production_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="@dimen/dp10"
            android:drawableRight="@mipmap/cook_back"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp15"
            android:paddingRight="21dp"
            android:paddingTop="@dimen/dp15"
            android:text="256作品"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_production"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp14"
            android:text="留言"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp16" />


        <TextView
            android:id="@+id/tv_leave_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="@dimen/dp10"
            android:drawableRight="@mipmap/cook_back"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp15"
            android:paddingRight="21dp"
            android:paddingTop="@dimen/dp15"
            android:text="256留言"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_leave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>