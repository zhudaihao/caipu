<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp40"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginRight="7dp"
    android:layout_marginTop="@dimen/dp30"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/radius"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/cs" />


        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cookbook_bottom_shape"
            android:paddingBottom="@dimen/dp15">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginTop="@dimen/dp10"
                android:src="@mipmap/nothing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp12"
                android:layout_toRightOf="@id/iv_icon"
                android:text="私厨"
                android:textColor="@color/color_7A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="@dimen/dp10"
                android:singleLine="true"
                android:text="个人增加了玉米"
                android:textColor="@color/color_7A"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_icon_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/tv_content"
                android:layout_marginLeft="@dimen/dp10"
                android:src="@mipmap/like" />


            <TextView
                android:id="@+id/tv_icon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_content"
                android:layout_marginLeft="@dimen/dp6"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/iv_icon_like"
                android:text="私厨"
                android:textColor="@color/praise_text"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_content"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="2018/08/08"
                android:textColor="#ADADAD"
                android:textSize="@dimen/sp12" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>