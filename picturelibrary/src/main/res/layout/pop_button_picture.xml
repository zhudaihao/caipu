<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_tag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/tag_view"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true" />

    <RadioButton
        android:id="@+id/rb_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/tag_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bu_shape"
        android:button="@null"
        android:gravity="center"
        android:text="取消"
        android:textColor="#525252"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rb_cancel"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_one"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/top_pressed"
            android:button="@null"
            android:clickable="true"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#EB5454"
            android:textSize="18sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />


        <RadioButton
            android:id="@+id/rb_two"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bottom_pressed"
            android:button="@null"
            android:clickable="true"
            android:gravity="center"
            android:text="相册"
            android:textColor="#0095FC"
            android:textSize="18sp" />


    </LinearLayout>

</RelativeLayout>